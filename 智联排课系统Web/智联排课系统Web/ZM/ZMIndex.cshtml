@{
    Layout = null;
}
@model List<Models.JiaoXueJieDuanBiao>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>学生信息系统</title>

    <meta name="viewport" content="width=device-width" />
    <meta content="text/html;charset=UTF-8" />
    <meta name="keywords" content="fsLayuiPlugin,fsLayui,layui,layuiPlugin,layui插件,layui快速开发插件" />
    <meta name="description" content="fsLayui是一个基于layui的快速开发插件，支持数据表格增删改查操作，提供通用的组件，通过配置html实现数据请求，减少前端js重复开发的工作。目前支持单数据表格、多数据表格、tab数据表格、树+数据表格、联动数据表格、layeidt编辑器、下拉框联动等。" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Cache-Control" content="no cache" />
    <meta http-equiv="Expires" content="0" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="format-detection" content="telephone=no" />
    <script src="https://cdn.bootcss.com/pace/1.0.2/pace.min.js"></script>
    <link href="https://cdn.bootcss.com/pace/1.0.2/themes/pink/pace-theme-flash.css" rel="stylesheet">
    <link href="https://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/MyFsLayui/plugins/layui/css/layui.css" media="all" />
    <link href="/MyFsLayui/plugins/contextMenu/jquery.contextMenu.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/MyFsLayui/css/fs.css?v=1.8.2" media="all" />
    <script type="text/javascript" src="/MyFsLayui/plugins/jquery/jquery.min.js"></script>
    <script src="/MyFsLayui/plugins/contextMenu/jquery.contextMenu.min.js"></script>
    <script type="text/javascript" src="/MyFsLayui/plugins/layui/layui.js"></script>
    <!--字典数据定义js-->
    <script type="text/javascript" src="/MyFsLayui/plugins/frame/js/main.js?v=1.8.2"></script>
    <script type="text/javascript" src="/MyFsLayui/plugins/frame/js/fsDict.js?v=1.7.0"></script>
    <script type="text/javascript" src="/MyFsLayui/plugins/frame/js/fs.js?v=1.7.0"></script>
    <script type="text/javascript" src="/MyFsLayui/plugins/frame/js/frame.js?v=1.7.0"></script>
</head>
<body>
    <div>
        <div class="layui-fluid">
            <div class="layui-row layui-col-space1">
                <div class="layui-col-md12">
                    <!---构建查询区start -->
                    <div class="layui-form-query">
                        <form class="layui-form" id="query_form">
                            <div class="layui-form-item">
                                <div class="layui-inline">
                                    <label class="layui-form-mid">学生姓名：</label>
                                    <div class="layui-input-inline" style="width: 100px;">
                                        <input type="text" name="xm" autocomplete="off" class="layui-input" />
                                    </div>
                                </div>

                                <div class="layui-inline">
                                    <label class="layui-form-mid">学生性别：</label>
                                    <div class="layui-input-inline" style="width: 100px;">
                                        <select name="sex" lay-verify="required">
                                            <option value="-1">--不限--</option>
                                            <option value="0">女</option>
                                            <option value="1">男</option>
                                        </select>
                                    </div>
                                </div>


                                <div class="layui-inline">
                                    <label class="layui-form-mid">学生地址：</label>
                                    <div class="layui-input-inline" style="width: 100px;">
                                        <input type="text" name="XSDZ" autocomplete="off" class="layui-input" />

                                    </div>
                                </div>

                                <div class="layui-inline">
                                    <label class="layui-form-mid">年级：</label>
                                    <div class="layui-input-inline" style="width: 100px;">
                                        <select name="XSGrade" lay-verify="required">
                                            <option value="-1">--不限--</option>
                                            @foreach (var a in Model)
                                            {
                                                <option value="@a.ID">@a.JieDuanMing</option>
                                            }

                                        </select>
                                    </div>
                                </div>

                                <div class="layui-inline">
                                    <div class="layui-input-inline">
                                        <button class="layui-btn" type="button" function="query"><i class="layui-icon">&#xe615;</i>查询</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!---构建查询区end -->


                <div class="layui-col-md12">
                    <div class="layui-row grid-demo">
                        <div class="layui-col-md12">
                            <!--外部按钮通过function=top 打开窗口-->
                            <button class="layui-btn" function="top" topurl="/ZM/ZMAdd" topwidth="800px" ismaximize="0" topheight="600px" toptitle="新增学员">
                                <i class="layui-icon">&#xe654;</i>新增学生
                            </button>

                            <button class="layui-btn" function="top" topurl="/ZM/AddBanZhuRen" topwidth="800px" ismaximize="0" topheight="600px" toptitle="新增班级">
                                <i class="layui-icon">&#xe654;</i>新增班级
                            </button>

                            <button class="layui-btn" function="refresh">
                                <i class="layui-icon">&#x1002;</i>刷新
                            </button>
                        </div>
                        <div class="layui-col-md12">

                            <!--表格占位符，通过设置html属性，异步构建表格-->
                            <table id="fsDatagrid" lay-filter="fsDatagrid" class="fsDatagrid" isload="1" url="/ZM/ZMGetStudentAjax" ispage="1" pagesize="10" height="full-160">
                            </table>
                            <!--定义列-->
                            <div class="fsDatagridCols">
                                <p checkbox="true" />
                                <p type="numbers" title="序号" />
                                <p field="XID" title="学号" width="100" />
                                <p field="StudentName" title="姓名" width="200" />

                                <p field="Sex" title="性别" width="100" />
                                <p field="Age" title="年龄" width="100" />
                                <p field="JieDuanMing" title="年级" width="100" />
                                <p field="BanJiMing" title="班级" width="100" />
                                <p field="Address" title="家庭地址" width="200" />
                                <p field="Phone" title="联系电话" width="120" />
                                <p field="HomePhone" title="家庭联系电话" width="120" />
                                <p fixed="right" align="center" toolbar="#barDemo" title="操作" width="220" />
                            </div>

                            <!--定义操作列-->
                            <script type="text/html" id="barDemo">
                                <!--打开一个对话框  lay-event="top"-->
                                <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="top" topurl="/ZM/ZMEdit" topwidth="800px" topheight="640px" toptitle="修改学生信息" inputs="XID:">修改</a>
                                <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="top" topurl="/ZM/HuanBan" topwidth="800px" topheight="640px" toptitle="换班" inputs="XID:">换班</a>
                                <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="top" topurl="/ZM/LiuJi" topwidth="800px" topheight="640px" toptitle="留级" inputs="XID:">留级</a>
                                <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="submit" url="/ZM/TuiStu" isconfirm="1" method="get" confirmmsg="该学生是否退学？" inputs="XID:">退学</a>
                            </script>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
