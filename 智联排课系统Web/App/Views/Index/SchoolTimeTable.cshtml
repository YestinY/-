    <div class="demoTable">

        <div class="layui-inline">
            <label class="layui-form-label"> 班级名称:</label>
            <div class="layui-input-inline">
                <input name="id" class="layui-input" id="demoReload" autocomplete="off">
            </div>
        </div>
