        <section class="xueqi">
            <div class="class">
                <label id="classResult">查询</label>
            </div>
        </section>

        <section class="query">
            <table>
                <tr>
                    <td>
                        <a href="/Index/SchoolTimeTable">
                            <img src="/img/timetable.png">
